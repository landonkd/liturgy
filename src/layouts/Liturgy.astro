---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import SiteHeader from '../components/SiteHeader.astro';
import SiteFooter from '../components/SiteFooter.astro';
import FormattedDate from '../components/FormattedDate.astro';

type Props = CollectionEntry<'liturgy'>['data'];

const { title, description, id, date } = Astro.props;
---

<html lang="en" data-color-theme="dark">

	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body>
		<SiteHeader />

		<main class="site-main">

			<article class="liturgy post">
				<header class="post-header">
					<div class="post-meta">â–‘ {id} <FormattedDate date={date}></FormattedDate></div>
					<h1 class="post-title">{title}</h1>
				</header>
				<div class="prose stack">
					<slot />
				</div>
			</article>

		</main>

		<SiteFooter />

	</body>

</html>

<style>
	.post-title {
		font-size: var(--font-size-2);
		margin-block-start: var(--space-2xs);
		text-wrap: balance;
	}

	.post-header {
		padding-block-end: var(--space-l);
	}

	.post-meta {
		font-family: var(--font-mono);
		font-size: var(--font-size--1);
		margin-block-start: var(--space-2xs);

		+ .post-meta {
			margin-block-start: 0;
		}
	}
</style>