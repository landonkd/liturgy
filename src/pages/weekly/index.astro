---
import BaseHead from '../../components/BaseHead.astro';
import SiteHeader from '../../components/SiteHeader.astro';
import SiteFooter from '../../components/SiteFooter.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';

// const posts = (await getCollection('liturgy')).sort(
// 	(a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
// );
const posts = (await getCollection('liturgy')).sort(
	(a, b) => a.data.id.localeCompare(b.data.id)
);
---

<!doctype html>
<html lang="en">
	
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>

	<body class="site-layout">

		<SiteHeader />

		<main class="site-main">
			<ol class="post-list stack">
				{
					posts.map((post) => (
						<li class="post-item">
							<a class="post-item__link cluster" href={`/weekly/${post.slug}/`}>
								<h2 class="post-item__title">{post.data.title}</h2>
								<p class="post-item__label"><FormattedDate date={post.data.date}></FormattedDate></p>
								<p class="post-item__label">{post.data.id}</p>
							</a>
						</li>
					))
				}
			</ol>
		</main>

		<SiteFooter />

	</body>

</html>

<style>
	.site-main {
		max-inline-size: 100%;
	}

	.post-list {
		list-style: none;
		margin: 0;
		padding: 0;
	}

	.post-item {
		margin-block: 0;
		
		* {
			margin-block: 0;
		}
	}

	.post-item__link {
		align-items: flex-start;
		border-bottom: 1px solid var(--color-text);
		flex-direction: row-reverse;
		gap: var(--space-s-2xl);
		justify-content: flex-end;
		padding-block: var(--space-2xs);
		text-decoration: none;
	}

	.post-item__label {
		font-family: var(--font-mono);
		font-size: var(--font-size--1);
	}

	.post-item__title {
		font-size: var(--font-size-0);
	}
</style>